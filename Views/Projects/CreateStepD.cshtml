@model smoothie.ViewModel.ProjectWizardViewModel

@{
    ViewData["Title"] = "Create Project - Step 4";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Create New Project</h2>
            <div class="card">
                <div class="card-header">
                    <h4>Select Team Members</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateStepD" method="post">
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle"></i>The project head will be automatically included.
                        </div>

                        @if (Model.AvailableEmployees != null && Model.AvailableEmployees.Any()) {
                            <div class="mb-3">
                                <label class="form-label">Search employees</label>
                                <input id="employeeSearch" type="text" class="form-control" placeholder="Type name..." autocomplete="off"/>
                            </div>

                            <div class="form-check mb-2">
                                <input id="selectAll" type="checkbox" class="form-check-input"/>
                                <label for="selectAll" class="form-check-label">Select all</label>
                            </div>

                            <div class="list-group mb-3" id="employeesContainer" style="max-height: 400px; overflow-y: auto;"></div>
                        }
                        else {
                            <div class="alert alert-warning">
                                No employees available to select.
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" name="action" value="back" class="btn btn-secondary">Back</button>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                                <button type="submit" name="action" value="next" class="btn btn-primary">Next</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            loadEmployees("");
        });

        document.getElementById("selectAll").addEventListener("change", function () {
            const checked = this.checked;
            document.querySelectorAll(".employee-checkbox").forEach(cb => cb.checked = checked);
        });

        // AJAX employees search
        let searchInput = document.getElementById("employeeSearch");
        let container = document.getElementById("employeesContainer");

        searchInput.addEventListener("input", function () {
            loadEmployees(this.value.trim());
        });

        searchInput.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
                e.preventDefault();
            }
        });

        function loadEmployees(pattern) {
            const selected = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.EmployeeIds));

            fetch(`/Projects/SearchEmployees/?pattern=${encodeURIComponent(pattern)}`)
                .then(r => r.json())
                .then(data => {
                    container.innerHTML = "";
                    data.forEach(e => {
                        const div = document.createElement('div');
                        div.className = 'list-group-item';

                        const formCheck = document.createElement('div');
                        formCheck.className = 'form-check';

                        const checkbox = document.createElement('input');
                        checkbox.type = 'checkbox';
                        checkbox.name = 'EmployeeIds';
                        checkbox.value = e.id;
                        checkbox.className = 'form-check-input employee-checkbox';
                        checkbox.checked = selected.includes(e.id);

                        const label = document.createElement('label');
                        label.className = 'form-check-label';
                        label.textContent = e.fullName; // Safe text insertion

                        formCheck.appendChild(checkbox);
                        formCheck.appendChild(label);
                        div.appendChild(formCheck);
                        container.appendChild(div);
                    });
                })
                .catch(err => console.error('Failed to load employees:', err));
        }
    </script>
};