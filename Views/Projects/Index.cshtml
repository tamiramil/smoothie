@model IEnumerable<smoothie.Models.Project>

@{
    ViewData["Title"] = "Projects";
    string qStartFrom = Context.Request.Query["startDateFrom"];
    string qStartTo = Context.Request.Query["startDateTo"];
    string qEndFrom = Context.Request.Query["endDateFrom"];
    string qEndTo = Context.Request.Query["endDateTo"];
    string qPriority = Context.Request.Query["priority"];
    string qCustomer = Context.Request.Query["customerCompanyId"];
    string qExecutor = Context.Request.Query["executorCompanyId"];
}

<h1>Projects</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</div>

<!-- Filters -->
<form method="get" asp-action="Index" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label class="form-label">Start date from</label>
            <input type="date" name="startDateFrom" value="@qStartFrom" class="form-control"/>
        </div>
        <div class="col-auto">
            <label class="form-label">Start date to</label>
            <input type="date" name="startDateTo" value="@qStartTo" class="form-control"/>
        </div>
        <div class="col-auto">
            <label class="form-label">End date from</label>
            <input type="date" name="endDateFrom" value="@qEndFrom" class="form-control"/>
        </div>
        <div class="col-auto">
            <label class="form-label">End date to</label>
            <input type="date" name="endDateTo" value="@qEndTo" class="form-control"/>
        </div>
        <div class="col-auto">
            <label class="form-label">Priority</label>
            <select name="priority" class="form-select">
                <option value="">(any)</option>
                @for (int i = 1; i <= 10; i++) {
                    <option value="@i" selected="@(qPriority == i.ToString() ? "selected" : null)">@i</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <label class="form-label">Customer</label>
            <select name="customerCompanyId" class="form-select"
                    asp-items="@(ViewBag.Companies as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)">
                <option value="">(any)</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="form-label">Executor</label>
            <select name="executorCompanyId" class="form-select"
                    asp-items="@(ViewBag.Companies as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)">
                <option value="">(any)</option>
            </select>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-secondary">Apply</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear filters</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered align-middle">
    <thead>
    <tr>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(ViewData["NameSortParm"])"
               asp-route-startDateFrom="@qStartFrom"
               asp-route-startDateTo="@qStartTo"
               asp-route-endDateFrom="@qEndFrom"
               asp-route-endDateTo="@qEndTo"
               asp-route-priority="@qPriority"
               asp-route-customerCompanyId="@qCustomer"
               asp-route-executorCompanyId="@qExecutor">
                Name
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(ViewData["StartDateSortParm"])"
               asp-route-startDateFrom="@qStartFrom"
               asp-route-startDateTo="@qStartTo"
               asp-route-endDateFrom="@qEndFrom"
               asp-route-endDateTo="@qEndTo"
               asp-route-priority="@qPriority"
               asp-route-customerCompanyId="@qCustomer"
               asp-route-executorCompanyId="@qExecutor">
                Start Date
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(ViewData["EndDateSortParm"])"
               asp-route-startDateFrom="@qStartFrom"
               asp-route-startDateTo="@qStartTo"
               asp-route-endDateFrom="@qEndFrom"
               asp-route-endDateTo="@qEndTo"
               asp-route-priority="@qPriority"
               asp-route-customerCompanyId="@qCustomer"
               asp-route-executorCompanyId="@qExecutor">
                End Date
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(ViewData["PrioritySortParm"])"
               asp-route-startDateFrom="@qStartFrom"
               asp-route-startDateTo="@qStartTo"
               asp-route-endDateFrom="@qEndFrom"
               asp-route-endDateTo="@qEndTo"
               asp-route-priority="@qPriority"
               asp-route-customerCompanyId="@qCustomer"
               asp-route-executorCompanyId="@qExecutor">
                Priority
            </a>
        </th>
        <th>Customer</th>
        <th>Executor</th>
        <th>Head</th>
        <th>Employees</th>
        <th>Documents</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any()) {
        foreach (var item in Model) {
            <tr>
                <td>@item.Name</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Priority</td>
                <td>@item.CustomerCompany.Name</td>
                <td>@item.ExecutorCompany.Name</td>
                <td>@item.Head.FullName;</td>
                <td>@(item.Employees?.Count ?? 0)</td>
                <td>@(item.Documents?.Count ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Delete</a>
                </td>
            </tr>
        }
    }
    else {
        <tr>
            <td colspan="10" class="text-center">No projects found.</td>
        </tr>
    }
    </tbody>
</table>
