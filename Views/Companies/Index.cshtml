@model IEnumerable<smoothie.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<h1>Companies</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-outline-primary">Add new</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Proj. as Customer</th>
        <th>Proj. as Executor</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any()) {
        foreach (var company in Model) {
            <tr>
                <th>@company.Id</th>
                <th>@company.Name</th>
                <th>@company.ProjectsAsCustomer.Count</th>
                <th>@company.ProjectsAsExecutor.Count</th>
                <td>
                    <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@company.Id" class="btn btn-sm btn-outline-primary">Delete</a>
                </td>
            </tr>
        }
    }
    else {
        <tr>
            <td colspan="10" class="text-center">No companies found.</td>
        </tr>
    }
    </tbody>
</table>