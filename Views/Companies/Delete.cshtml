@model smoothie.Models.Company

@{
    ViewData["Title"] = "Delete Company";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger-subtle">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Company</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>You sure?</strong>
                        <i class="bi bi-info-circle"></i>You are about to delete @Model.Name
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">No</a>
                            <button type="submit" class="btn btn-danger">Yes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>